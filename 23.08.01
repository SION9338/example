fun main(){
    val number = 10
    var language = "Korea"
    val secondNumber: Int = 20
    language = "English"

    println("number: $number") // number : 10
    println("language: $language") // language: English
    println("secondNumber: $secondNumber") // secondNumber: 20 
}

